<!--        JOIN cart_menu_option cm-->
<!--        ON c.id = cm.menu_id-->
<!--        WHERE c.user_id = #{userId}-->
<!--    </select>-->

    <update id="updateQuantityByCartIdAndUserId">
        UPDATE carts
        SET quantity = #{quantity}
        WHERE id = #{cartId}
        AND user_id = #{userId}
    </update>

    <delete id="deleteByCartId">
        DELETE
        FROM carts
        WHERE id = #{cartId}
        AND user_id = #{userId}
    </delete>

    <delete id="deleteByAllUserId">
        DELETE
        FROM carts
        WHERE user_id = #{userId}
    </delete>
</mapper>